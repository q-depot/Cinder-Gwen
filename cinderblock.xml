<?xml version="1.0" encoding="UTF-8" ?>
<cinder>
<block
	name="Gwen"
	id="org.rte.gwen"
	author="Garry Newman (block: Richard Eakin)"
	license="MIT"
	summary="GWEN (GUI Without Extravagant Nonsense) for Cinder."
	git="git://github.com/reakinator/Cinder-Gwen.git"
	version="0.1"
	libraryUrl="git://github.com/garrynewman/GWEN.git"
	>

	<headerPattern>src/cigwen/*.h</headerPattern>
	<source>src/cigwen/GwenRendererGl.cpp</source>
	<source>src/cigwen/GwenInput.cpp</source>
	<source>src/cigwen/CinderGwen.cpp</source>
	<platform os="macosx">
		<source compileAs="mm">src/cigwen/GwenPlatform.cpp</source>
	</platform>
	<platform os="msw">
		<source>src/cigwen/GwenPlatform.cpp</source>
	</platform>

	<headerPattern>gwen/gwen/include/Gwen/*</headerPattern>
	<headerPattern>gwen/gwen/include/Gwen/Controls/*</headerPattern>
	<headerPattern>gwen/gwen/include/Gwen/Controls/Dialogs/*</headerPattern>
	<headerPattern>gwen/gwen/include/Gwen/Controls/Layout/*</headerPattern>
	<headerPattern>gwen/gwen/include/Gwen/Controls/Property/*</headerPattern>
	<headerPattern>gwen/gwen/include/Gwen/Skins/*</headerPattern>
	<headerPattern>gwen/gwen/include/Gwen/Util/*</headerPattern>

	<sourcePattern>gwen/gwen/src/*</sourcePattern>
	<sourcePattern>gwen/gwen/src/Controls/*</sourcePattern>
	<sourcePattern>gwen/gwen/src/Controls/Dialog/*</sourcePattern>

	<includePath>src</includePath>
	<includePath>gwen/gwen/include</includePath>

	<asset>assets/DefaultSkin.png</asset>
</block>
</cinder>